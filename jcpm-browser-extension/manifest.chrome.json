{
  "manifest_version": 3,
  "name": "jcpm saver",
  "version": "1.0.0",
  "description": "Detect an auth attempt and suggest saving the data in the jcpm page",

  "permissions": ["storage", "activeTab", "scripting", "notifications"],

  "background": {
    "service_worker": "scripts/background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"]
    }
  ],

  "action": {
    "default_popup": "views/index.html",
    "default_icon": "images/jcpm-icon.png"
  },

  "icons": {
    "48": "images/jcpm-icon.png"
  }
}